---
import { Icon } from 'astro-icon/components'
import { buttonVariants } from "../components/ui/button"
import MobileSheet from './MobileSheet.vue';
import { mainNavLinks, actionLinks } from "../config/nav.config";

const { title } = Astro.props;
---

<header class="fixed top-0 left-0 bg-background/60 backdrop-blur-lg w-full py-4 px-8 z-50 border-b border-border/40">
    <nav class="max-w-screen-2xl mx-auto flex items-center justify-between">
        <a href="/" class="flex flex-row items-center gap-3 hover:text-primary transition-colors duration-300">
            <img src="/favicon.ico" alt="UCAN Logo" class="w-8 h-8" />
            <span class="font-bold text-xl">{title}</span>
        </a>
        <div class="hidden md:flex flex-row items-center gap-6">
            <div class="flex flex-row items-center gap-6 text-card-foreground">
                {mainNavLinks.map(link => (
                  <a href={link.href} class="hover:text-primary transition-colors duration-300">{link.label}</a>
                ))}
            </div>
            <div class="flex flex-row items-center gap-2">
                {actionLinks.map(link => (
                  <a href={link.href} class={buttonVariants({ variant: link.variant, size: "sm" })}>
                    <Icon class="size-4 mr-2" name={link.icon} />
                    {link.label}
                  </a>
                ))}
            </div>
        </div>
        <MobileSheet client:load />
    </nav>
</header>
