---
import PageHeader from "../PageHeader.astro"
import { Icon } from "astro-icon/components"
import { buttonVariants } from "../ui/button"
import UcanBenefitsIllustration from "../UcanBenefitsIllustration.vue"

const specUrl = "/specification/"
const startUrl = "/getting-started/"
---

<div class="w-full relative z-10 min-h-screen flex flex-col pt-24 lg:pt-32 px-4">
	<PageHeader
		variant="hero"
		title="Zero-Trust Auth, for Apps and AI"
		titleHtml="Zero-Trust Auth,<br/>for Apps and AI"
		description="UCAN is a trustless, secure, local-first authorization network that puts users in control of their permissions â€” no central authority required."
	>
		<a slot="actions" href={specUrl} class={buttonVariants({ variant: "default", size: "lg" })}>
			<Icon name="lucide:book-open" class="size-4 mr-2" />
			<span class="font-bold">Read Specification</span>
		</a>

		<a slot="actions" href={startUrl} class={buttonVariants({ variant: "secondary", size: "lg" })}>
			<Icon name="lucide:zap" class="size-4 mr-2" />
			Get Started
		</a>
	</PageHeader>

	<div class="w-full flex-1 flex items-center justify-center relative overflow-hidden pb-10 lg:pb-16 md:mt-auto">
		<div class="w-full max-w-xl md:max-w-2xl lg:max-w-3xl">
			<UcanBenefitsIllustration client:load />
		</div>
		<div class="absolute inset-0 z-30" />
	</div>
</div>
